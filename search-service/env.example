# Port service sẽ chạy
PORT=3006

# Environment
NODE_ENV=development

# Địa chỉ Elasticsearch
# Nếu chạy bằng Docker: http://localhost:9200
# Nếu dùng docker-compose: http://elasticsearch:9200
ELASTICSEARCH_NODE=http://localhost:9200

# Tên index Elasticsearch dùng cho sản phẩm
ELASTICSEARCH_INDEX=products

# Elasticsearch authentication (optional - chỉ cần nếu bật xpack.security.enabled=true)
# Nếu chạy với xpack.security.enabled=false thì không cần điền
# ELASTICSEARCH_USERNAME=
# ELASTICSEARCH_PASSWORD=

# Redis connection string
REDIS_URL=redis://localhost:6379

# Product Service URL (for initial sync)
PRODUCT_SERVICE_URL=http://localhost:3002

# Logging
LOG_LEVEL=info

# Cache configuration
CACHE_ENABLED=true
CACHE_TTL=900

# Search configuration
SEARCH_MAX_RESULTS=100
SEARCH_DEFAULT_SIZE=20
SEARCH_MAX_SIZE=100